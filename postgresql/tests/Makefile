# This Makefile is generated by omake: https://github.com/ouonline/omake.git

CXX := g++

ifeq ($(debug), y)
	CXXFLAGS += -g
else
	CXXFLAGS += -O2 -DNDEBUG
endif

TARGET := test_pgsql

.PHONY: all clean distclean

all: $(TARGET)

.PHONY: omake_phony_0
omake_phony_0:
	$(MAKE) debug=$(debug) libpgsql_client_static.a -C ..

omake_dep_0_INCLUDE := -I../..

omake_dep_0.test_pgsql_client.cpp.o: test_pgsql_client.cpp
	$(CXX) $(CXXFLAGS) -Wall -Werror -Wextra $(omake_dep_0_INCLUDE) -c $< -o $@

test_pgsql_OBJS := omake_dep_0.test_pgsql_client.cpp.o

test_pgsql_LIBS := ../libpgsql_client_static.a -lpq

test_pgsql: $(test_pgsql_OBJS) | omake_phony_0
	$(CXX) $(CXXFLAGS) -Wall -Werror -Wextra -o $@ $^ $(test_pgsql_LIBS)

clean:
	rm -f $(TARGET) $(test_pgsql_OBJS)

distclean:
	$(MAKE) clean
	$(MAKE) distclean -C ..
