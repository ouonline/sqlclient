# This Makefile is generated by omake: https://github.com/ouonline/omake.git

CXX := g++

ifeq ($(debug), y)
	CXXFLAGS += -g
else
	CXXFLAGS += -O2 -DNDEBUG
endif

TARGET := test_sqlite3

.PHONY: all clean distclean

all: $(TARGET)

.PHONY: omake_phony_0
omake_phony_0:
	$(MAKE) debug=$(debug) libsqlite_client_static.a -C ..

omake_dep_0_INCLUDE := -I../../../../.. -I../..

omake_dep_0.test_sqlite_client.cpp.o: test_sqlite_client.cpp
	$(CXX) $(CXXFLAGS) -Wall -Werror -Wextra $(omake_dep_0_INCLUDE) -c $< -o $@

test_sqlite3_OBJS := omake_dep_0.test_sqlite_client.cpp.o

test_sqlite3_LIBS := ../libsqlite_client_static.a ../../../../../sqlite3/libsqlite3.a -ldl -lpthread

test_sqlite3: $(test_sqlite3_OBJS) | omake_phony_0
	$(CXX) $(CXXFLAGS) -Wextra -Werror -Wall -o $@ $^ $(test_sqlite3_LIBS)

clean:
	rm -f $(TARGET) $(test_sqlite3_OBJS)

distclean:
	$(MAKE) clean
	$(MAKE) distclean -C ..
